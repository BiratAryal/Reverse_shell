//Declarative pipeline
pipeline {
  agent any
  //could be node or master or slave or linux/windows node where to run the command
  stages {
    //
    stage("build) {
          //stage name
          steps {
            echo "building the app"
            }
    }
    stage("test) {
          //stage name
          steps {
            echo "testing the application."           
          }
    }
  }
}                  
